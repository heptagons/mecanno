   \begin{scope}[shift={(#2,0)},rotate=72]
    \meccanostrip[#1]{#2}{1}{#3} \path (-108:10*#3) node{$#6$};
    \begin{scope}[shift={(#2,0)},rotate=72]
     \meccanostrip[#1]{#2}{1}{#3} \path (-108:10*#3) node{$#7$};
     \begin{scope}[shift={(#2,0)},rotate=72]
      \meccanostrip[#1]{#2}{1}{#3} \path (-108:10*#3) node{$#8$};
     \end{scope}
